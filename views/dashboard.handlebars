<main>
{{#if posts.length}}
<section>
  <h2>Post History</h2>
    {{#each posts as |post|}}
        <div class="card">
            <div class="card-header">
                <h4><a class="link" href="/dashboard/edit/{{post.id}}">{{post.title}}</a></h4>
            </div>
        </div>
    {{/each}}

</section>
{{/if}}

<button type="submit" class="btn"><a class="link" href="/dashboard/new">Add New Post</a></button>

</main>